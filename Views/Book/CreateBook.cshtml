@model BookDto

@{
    ViewData["Title"] = "CreateBook";
}

<h1>Create New Book</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LoanAble" class="control-label"></label>
                <input asp-for="LoanAble" class="" />
                <span asp-validation-for="LoanAble" class=""></span>
            </div>

            @* <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <input asp-for="AuthorId" class="form-control" />
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label for="Author">Author</label>
                <select asp-for="AuthorId" class="form-control">
                    @if (Model.Authors != null)
                    {
                        foreach (var genre in Model.Authors)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    }

                </select>
            </div>

            <div class="form-group">
                <label for="Genre">Genre</label>
                <select asp-for="GenreId" class="form-control">
                    @if (Model.Genres != null)
                    {
                        foreach (var genre in Model.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    }

                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="BookIndex">Back To List</a>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}