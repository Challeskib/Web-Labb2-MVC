@model IEnumerable<Book>
@{
    ViewData["Title"] = "BookIndex";

}
<h1>BookIndex</h1>
<p>
    <a asp-action="CreateBook" class="btn btn-outline-primary"><i class="fa fa-plus"></i> Create New Book</a>
</p>

<p>
    <a asp-action="CreateAuthor" asp-controller="Author" class="btn btn-outline-primary"><i class="fa fa-plus"></i> Create New Author</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanAble)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>


                <td>@Html.DisplayFor(modelItem => item.Title)</td>


                <td>@Html.DisplayFor(modelItem => item.Author.Name)</td>


                <td>@Html.DisplayFor(modelItem => item.Description)</td>

                <td>@Html.DisplayFor(modelItem => item.Year)</td>

                <td>@Html.DisplayFor(modelItem => item.LoanAble)</td>


                <td>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Details <i class="fa fa-edit"></i></a>

                    <a asp-action="UpdateBook" class="btn btn-warning" asp-route-id="@item.Id">
                        Edit <i class="fa fa-edit"></i>
                    </a>

                    <a asp-action="DeleteBook" class="btn btn-danger" asp-route-id="@item.Id">
                        Delete <i class="fa fa-trash"></i>
                    </a>

                </td>

            </tr>
        }
    </tbody>

</table>